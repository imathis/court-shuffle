{
  "name": "court-shuffle",
  "private": false,
  "version": "2.0.0",
  "type": "module",
  "description": "A Progressive Web App for managing court-based sports games through card-based player assignments",
  "keywords": ["sports", "court", "game", "pwa", "react", "card", "player", "assignment"],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/court-shuffle.git"
  },
  "homepage": "https://github.com/yourusername/court-shuffle#readme",
  "bugs": {
    "url": "https://github.com/yourusername/court-shuffle/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "bun run optimize:svg && bun run generate:safe-areas && tsc -b && vite build",
    "build:no-optimize": "bun run generate:safe-areas && tsc -b && vite build",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "optimize": "vite optimize",
    "optimize:svg": "svgo --config svgo.config.js src/assets/cards/*.svg --quiet",
    "generate:safe-areas": "node scripts/generate-safe-areas.js",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.19.5",
    "lucide-react": "^0.514.0",
    "next-themes": "^0.4.6",
    "prop-types": "^15.8.1",
    "qrcode-svg": "^1.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.6.2",
    "react-transition-group": "^4.4.5",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.1",
    "use-debounce": "^10.0.5",
    "vaul": "^1.1.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@svgr/plugin-jsx": "^8.1.0",
    "@svgr/plugin-svgo": "^8.1.0",
    "@tailwindcss/vite": "^4.1.10",
    "@types/node": "^24.0.1",
    "@types/qrcode-svg": "^1.1.5",
    "@types/react": "^19.0.4",
    "@types/react-dom": "^19.0.10",
    "@types/react-transition-group": "^4.4.12",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.21.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "svgo": "^3.3.2",
    "tailwindcss": "^4.1.10",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^1.0.0",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^3.2.4"
  }
}
